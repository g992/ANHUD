<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_log_section">

    <TextView
        android:id="@+id/helpItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/helpItemBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#B0FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/helpItemCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:textColor="#E0E0E0"
        android:textIsSelectable="true"
        android:textSize="12sp"
        android:visibility="gone"
        android:background="#202020" />

    <Button
        android:id="@+id/helpCopyCommandButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/help_copy_command_button"
        android:visibility="gone" />
</LinearLayout>
