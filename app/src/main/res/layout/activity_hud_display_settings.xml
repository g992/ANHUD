                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/speed_limit_alert_threshold_label"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/hudSpeedLimitAlertThresholdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speed_limit_alert_threshold_default"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/hudSpeedLimitAlertThresholdSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/positionRoadCameraCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_log_section"
