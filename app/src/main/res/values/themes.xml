<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ANHUD" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hud_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/hud_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/hud_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorBackground">@color/hud_dark</item>
    </style>

    <style name="Theme.ANHUD" parent="Base.Theme.ANHUD" />

    <style name="ThemeOverlay.ANHUD.Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/dialog_background</item>
        <item name="android:textColorPrimary">@color/dialog_text_primary</item>
        <item name="android:textColorSecondary">@color/dialog_text_secondary</item>
        <item name="colorAccent">@color/dialog_text_primary</item>
    </style>
</resources>
